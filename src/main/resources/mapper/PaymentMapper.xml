<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.start01.dao.PaymentDao">
    <select id="allPayment" resultType="PaymentDto">
        SELECT * FROM PAYMENT
    </select>
    <select id="allPaymentCash" resultType="PaymentDto">
        SELECT * FROM PAYMENT WHERE COMMENTS = 'cash'
    </select>
    <insert id="insertCash" parameterType="PaymentDto">
        INSERT INTO PAYMENT (user_id, comments, inout, amount)
        VALUES (#{userId}, #{comments}, #{inout}, #{amount})
    </insert>
    <update id="updateCash" parameterType="int">
        Update payment set comments=#{comments} where id=#{id}
    </update>
</mapper>