<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.start01.mapper.MenuMapper">
    <select id="ImageByFolder" parameterType="int" resultType="ImageDto">
        SELECT * FROM image WHERE FOLDER=#{folder}
    </select>
    <insert id="MenuImageInsertByOwner" parameterType="ImageDto">
        INSERT INTO image (folder, filename)
        values (#{folder}, #{filename})
    </insert>
</mapper>